<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
  <channel>

    <title>{{title}}</title>
    <link>{{domain}}</link>
    <language>en-us</language>
    <lastBuildDate>{{currentTime}}</lastBuildDate>
    <ttl>60</ttl>

    {{#posts}}
    <item>
      <description>{{title}} - {{description}}</description>
      <pubDate>{{date}}</pubDate>
      <guid>{{domain}}/{{url}}</guid>
    </item>
    {{/posts}}

  </channel>
</rss>
